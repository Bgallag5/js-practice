      userTurn = userTurn.toLocaleLowerCase();

      /*if (userTurn === "Rock" || userTurn === "rock" || userTurn === "ROCK" === "R" === "r")
      if (userTurn === "Paper" || userTurn === "paper" || userTurn === "PAPER" === "P" === "p")
      if (userTurn === "Scissors" || userTurn === "scissors" || userTurn === "SCISSORS" === "S" === "s") {  */
        if (userTurn === 'r' || userTurn === 'p' || userTurn === 's') {
        alert("The computer chose " + computerTurn);

